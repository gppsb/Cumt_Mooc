<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="coursename"
            android:textColor="@color/intro_text"
            android:textSize="14sp"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:src="@drawable/class_finished"
            android:layout_toRightOf="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="本课程为NGUI课程续篇，结合上一课学习的基础知识，老师讲带领同学们完成登陆以及游戏主界面的功能实现。在Unity3D开发中，NGUI的地位举足轻重，不论版本怎样变化。掌握NGUI技术还是有必要的。"
        android:textSize="12sp"
        android:textColor="@color/intro_second_text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>




</LinearLayout>