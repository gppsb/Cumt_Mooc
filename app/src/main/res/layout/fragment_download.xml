<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >

        <ImageView
                android:id="@+id/iv_classify"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/classify_selected"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地课程"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/iv_classify"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                />
        <TextView
            android:id="@+id/tv_cons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/tv_clear"
            android:text="4.6GB/22.0GB、"
            android:textSize="13sp"
            android:textColor="@color/dowmload_subtitle"
            android:layout_centerVertical="true"

            />
        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="清空"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>





    </LinearLayout>




